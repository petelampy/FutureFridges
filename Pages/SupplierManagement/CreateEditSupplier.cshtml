@page
@model FutureFridges.Pages.SupplierManagement.CreateEditSupplierModel
@{
}

<style>
    input[type="submit"] {
        display: none;
    }

    .custom-file-update {
        border: 1px solid #ccc;
        display: inline-block;
        padding: 6px 12px;
        cursor: pointer;
        background-color: darkorange;
    }
</style>

<div class="container-sm col-sm-8 bg-light rounded-3 border p-5 shadow-lg">
    <form method="post" enctype="multipart/form-data" novalidate class="m-auto">
        <div>
            <label asp-for="@Model.Supplier.Name"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="@Model.Supplier.Name" />
            </div>
        </div>
        <div>
            <label asp-for="@Model.Supplier.Email"></label>
            <div class="col-sm-12">
                <input class="form-control" asp-for="@Model.Supplier.Email" />
            </div>
        </div>
        <div class="text-center">
            <input type="hidden" asp-for="@Model.Supplier.UID" />

            @if (@Model.UID != Guid.Empty)
            {
                <label for="update-supplier" class="custom-file-update">
                    <i class="fa fa-cloud-upload"></i> Update Supplier
                </label>
                <input id="update-supplier" type="submit" value="Update Supplier">
            }
            else
            {
                <label for="create-supplier" class="custom-file-update">
                    <i class="fa fa-cloud-upload"></i> Create Supplier
                </label>
                <input id="create-supplier" type="submit" value="Create Supplier">
            }
            @Html.ValidationSummary()
        </div>
    </form>
</div>