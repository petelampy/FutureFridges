@page
@using FutureFridges.Business.StockManagement;
@model FutureFridges.Pages.ProductManagementModel
@{
    ViewData["Title"] = "Product Management";
}

<h1 class="text-center">Product Management</h1>
<h2 class="text-center">Create, Edit and Update types of product available in your kitchen</h2>
<hr>
<h3 class="text-center">ADD FILTERS/SEARCH BOXES FOR CATEGORY, NAME, ETC HERE</h3>
<div class="row justify-content-center">
    <table>
        <thead>
            <tr>
                <th>
                    Product ID
                </th>
                <th>
                    Product GUID
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Product Category
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (Product product in @Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Product_UID</td>
                    <td>@product.Name</td>
                    <td>@product.Category</td>
                    <td><a class="btn btn-warning" role="button" asp-page="CreateEditProduct" asp-route-UID="@product.Product_UID"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
                </tr>
            }
        </tbody>
    </table>

    <hr>

    <h3>Create New Product</h3>
    <a class="btn btn-warning" role="button" asp-page="CreateEditProduct">Create Product</a>
</div>
