@page
@using FutureFridges.Business.OrderManagement;
@model FutureFridges.Pages.OrderManagement.CreateOrderModel
@{
}

<div class="col-sm">
    <h2>Create New Order</h2>
    <h3>Items: @Model.Order.NumberOfItems</h3>
    <hr>
    
    <form asp-page-handler="addItem" method="post">
        <div class="row">
            <div class="col-sm-4">
                <select class="form-select" asp-for="@Model.SelectedProduct" asp-items="@Model.ProductSelection">Select Product</select>
            </div>
            <div class="col-sm-6">
                <input type="number" asp-for="@Model.SelectedProductQuantity" class="form-control " placeholder="1" aria-label="" aria-describedby="basic-addon1">
            </div>
            <div class="input-group-prepend col-sm-2">
                <button class="btn btn-outline-secondary w-100">Submit</button>
            </div>
        </div>
        @*MAKE IT SO THE INPUT AMOUNT IS THE INCREASE IN THE ORDER WHEN THE BUTTON IS PLACED*@
        <input type="hidden" asp-for="@Model.Order.NumberOfItems">
        <input type="hidden" asp-for="@Model.Order.Id">
        <input type="hidden" asp-for="@Model.Order.UID">
        <input type="hidden" asp-for="@Model.Order.OrderItems">
    </form>
    <table class="text-center" style="width: 100%;">
        <thead>
            <tr>
                <th>
                    Item
                </th>
                <th>
                    Quantity
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (OrderItem orderItem in Model.Order.OrderItems)
            {
                <tr>
                    <td>@orderItem.ProductName</td>
                    <td>@orderItem.Quantity</td>
                    <td><a class="btn" asp-page="CreateOrder" asp-route-item_uid="@orderItem.UID" asp-route-order_uid="@orderItem.Order_UID" asp-page-handler="removeItem">DELETE ITEM</a></td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn" asp-page="CreateOrder" asp-route-uid="@Model.UID" asp-page-handler="createOrder">Create</a>
    <a class="btn" asp-page="CreateOrder" asp-route-uid="@Model.UID" asp-page-handler="cancelOrder">Cancel</a>
</div>